{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "satellites": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "distance": {
              "type": "number"
            },
            "message": {
              "type": "array",
              "minItems": 4,
              "items": [
                {
                  "type": "string"
                }
              ]
            }
          },
          "required": [
            "name",
            "distance",
            "message"
          ]
        }
      ]
    }
  },
  "required": [
    "satellites"
  ]
}